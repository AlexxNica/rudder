<TECHNIQUE name="DSC Agent">
  <DESCRIPTION>System technique for the DSC Agent</DESCRIPTION>
  <SYSTEM>true</SYSTEM>

  <AGENT type="dsc">
    <TMLS>
      <TML name="rudder-directives">
        <OUTPATH>rudder-directives.ps1</OUTPATH>
      </TML>
      <TML name="rudder-system-directives">
        <OUTPATH>rudder-system-directives.ps1</OUTPATH>
      </TML>
    </TMLS>
    
    <FILES>
      <FILE name="rudder.ps1">
        <OUTPATH>rudder.ps1</OUTPATH>
        <INCLUDED>false</INCLUDED>
      </FILE>
      <FILE name="some-resource.conf" />
    </FILES>
  
    <BUNDLES>
      <NAME>configure_logger</NAME>
    </BUNDLES>
  </AGENT>

  <SYSTEMVARS>
    <NAME>RUDDER_DIRECTIVES_SEQUENCE</NAME>
    <NAME>RUDDER_SYSTEM_DIRECTIVES_SEQUENCE</NAME>
  </SYSTEMVARS>

  <SECTIONS>
    <!-- This is just some examples -->
    <SECTION name="Update" component="true" />
    <SECTION name="ncf Initialization" component="true" />
    <SECTION name="Security parameters" component="true" />
    <SECTION name="Log system for reports" component="true" />
  </SECTIONS>

</TECHNIQUE>
